---
import { jobs } from '@/data/journey';
---

<div class="mw-container">
  <h2 class="mw-section-title">Professional Journey</h2>
  <div class="mw-timeline-big">
    {
      jobs.map(element => (
        <div class="mw-timeline-big-step">
          <div class="mw-timeline-big-date-container">
            <div class="mw-timeline-big-date-main">{element.time}</div>
            {element.timeRange && (
              <div class="mw-timeline-big-date-sub">({element.timeRange})</div>
            )}
          </div>
          <div class="mw-timeline-big-content">
            <div class="mw-card mw-card-content">
              <div class="mw-card-body">
                <h3 class="mw-card-title">{element.title}</h3>
                <p class="mw-card-subtitle">
                  {element.company} | {element.location}
                </p>
                <p class="mw-card-text">{element.description}</p>
              </div>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</div>
